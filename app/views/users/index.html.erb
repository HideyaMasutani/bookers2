<div class="container">

	<div class="row">

		<div class="col-md-3">
			<!-- render 'books/list',user:@user -->
			<h2>User info</h2>
			<%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>

			<table class="table">
			  <tbody>

					<tr>
						<th>name</th>
						<th><%= @user.name %></th>
					</tr>

					<tr>
						<th>introduction</th>
						<th><%= @user.introduction %></th>
					</tr>

				</tbody>
			</table>

			<button type = "button">
			<% if @user.id == current_user.id %>
			    <%= link_to  edit_user_path(@user) do %>
			    <i class="fas fa-user-cog"></i>
			    <% end %>
			<% else %>
			    <%= link_to books_path do %>
			    <i class="fas fa-user-cog"></i>
			    <% end %>
			<% end %>
			</button>
			<!-- render 'books/list2',book:@book -->
			<%= form_with model: @book, local:true do |f| %>

			 <% if @book.errors.any? %>
			   <h3><%= @book.errors.count %>件のerrorsが発生しました</h3>
			   <% @book.errors.full_messages.each do |message| %>
			     <li><%= message %></li>
			   <% end %>
			 <% end %>

			<h2>New book</h2>

			 <div class="form-group">
			   <label for="book_title">Title</label>
			   <%= f.text_field :title, class: "form-control" %>
			 </div>

			 <div class="form-group">
			   <label for="book_opinion">Opinion</label>
			   <%= f.text_area :body, class: "form-control" %>
			 </div>

			 <div class="form-group">
			   <%= f.submit "Create Book", class: "btn btn-success" %>
			 </div>

			<% end %>
		</div>

		<div class="col-md-9">
      <h2>Users</h2>
	    <table class="table">
		    <thead>
			    <tr>
				    <th>image</th>
				    <th>name</th>
				    <th colspan=3></th>
			    </tr>
		    </thead>
		    <tbody>
			    <% @users.each do |user| %>
				    <tr>
					    <td><%= attachment_image_tag user, :profile_image, size: "40x40", fallback: "no_image.jpg", class: "img-circle pull-left profile-thumb" %></td>
					    <td><%= user.name %></td>
					    <td><%= link_to "Show", user_path(user.id) %></td>
				    </tr>
			    <% end %>
		    </tbody>
	  </table>
  </div>
</div>


